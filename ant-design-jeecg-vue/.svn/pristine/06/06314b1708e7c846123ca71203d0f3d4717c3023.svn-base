<template>
  <a-modal
    title="服装信息"
    width="100%"
    :visible="visible"
    :confirmLoading="confirmLoading"
    @cancel="handleCancel"
    style="top:0;overflow-y: auto;"
    :footer="null"
    cancelText="关闭"
  >
    <a-spin :spinning="confirmLoading">
      <div class="jiben">
        <div class="geren-box" style="justify-content: space-between;">
          <div style="display: flex; align-items: center;">
            <span class="xian"></span>
            <span class="title">服装信息</span>
          </div>
          <a-button type="primary" icon="file-text" @click="handleOk">保存</a-button>
        </div>
        <div class="geRen-a">
          <div class="jibenb">
            <div class="jibenb_a" v-for="(item,index) in fuzhaungInfo" :key="index">
              <span class="jibenb_a_name">
                <!-- <a v-show="item.require" style="font-size:20px;color:#ff4848;">*</a> -->
                {{item.name}}:
              </span>
              <a-input
                style="width:198px"
                :value="item.value"
                @change="(e)=>{ item.value = e.target.value }"
                v-show="item.status == 1 "
                :disabled="item.jinyong"
                :placeholder="item.placehold"
              />
              <a-select
                :placeholder="item.placehold"
                :dropdownMatchSelectWidth="false"
                v-model="item.value"
                v-show="item.status == 2 "
                style="width:198px"
                class="jibenb_a_select"
              >
                <a-select-option
                  v-for="(itea,ind) in item.second"
                  :key="ind"
                  :value="itea.name"
                >{{itea.name}}</a-select-option>
              </a-select>
              <a-textarea
                style="width:597px;color:black"
                v-show="item.status== 4 "
                :value="item.value"
                @change="(e)=>{ item.value = e.target.value }"
                :autoSize="true"
              />
              <a-input
                style="width:198px"
                :value="item.value"
                type="number"
                v-show="item.status == 9 "
                :placeholder="item.placehold"
                @change="(e)=>{ item.value = e.target.value }"
              />
            </div>
          </div>
        </div>
      </div>
      <div class="jiben">
        <div class="geren-box">
          <span class="xian"></span>
          <span class="title">发放记录</span>
        </div>
        <div style="padding: 0px 6px;">
          <ffjl ref="fafang" :sfzh="sfzh"></ffjl>
        </div>
      </div>
    </a-spin>
  </a-modal>
</template>

<script>
import { postAction, putAction, getAction } from '@/api/manage'
import { httpAction } from '@/api/manage'
import pick from 'lodash.pick'
import moment from 'moment'
import ffjl from '../FzffjlList'

export default {
  name: 'FzxxModal',
  components: {
    ffjl
  },
  data() {
    return {
      visible: false,
      model: {},
      labelCol: {
        xs: { span: 24 },
        sm: { span: 5 }
      },
      wrapperCol: {
        xs: { span: 24 },
        sm: { span: 16 }
      },

      confirmLoading: false,
      fuzhaungInfo: [
        {
          name: '身高(cm)',
          require: false,
          jinyong: false,
          placehold: '',
          value: '',
          status: '1',
          second: []
        },
        {
          name: '体重(KG)',
          require: false,
          jinyong: false,
          placehold: '',
          value: '',
          status: '1',
          second: []
        },
        {
          name: '头围(cm)',
          require: false,
          jinyong: false,
          placehold: '',
          value: '',
          status: '1',
          second: []
        },
        {
          name: '腰围(cm)',
          require: false,
          jinyong: false,
          placehold: '',
          value: '',
          status: '1',
          second: []
        },
        {
          name: '鞋码',
          require: false,
          jinyong: false,
          placehold: '',
          value: '',
          status: '1',
          second: []
        },
        {
          name: '发放品种',
          require: false,
          jinyong: false,
          placehold: '',
          value: '',
          status: '2',
          second: [
            { name: '冬执勤服' },
            { name: '春秋执勤服' },
            { name: '夏执勤服' },
            { name: '常服' },
            { name: '作训服' },
            { name: '帽子' },
            { name: '标志' },
            { name: '单鞋' },
            { name: '棉鞋' }
          ]
        },
        {
          name: '发放次数',
          require: false,
          jinyong: false,
          placehold: '',
          value: '',
          status: '9',
          second: []
        },
        {
          name: '是否发放',
          require: false,
          jinyong: false,
          placehold: '',
          value: '',
          status: '2',
          second: [{ name: '是' }, { name: '否' }]
        }
      ],
      url: {
        add: '/rsda/fzxx/add',
        edit: '/rsda/fzxx/edit'
      },
      sfzh: '',
      fuzhuangid: ''
    }
  },
  created() {},
  methods: {
    add() {
      this.edit('')
    },
    edit(record) {
      let that = this
      this.sfzh = record.sfzh
      this.chaxun(record.sfzh)
      this.visible = true
      setTimeout(function() {
        that.$refs.fafang.shuaxin()
      }, 100)
    },
    //查询
    chaxun(sfzh) {
      let obj = {
        sfzh: sfzh
      }
      this.confirmLoading = true
      getAction('/rsda/fzxx/queryById', obj)
        .then(res => {
          if (res.success == true) {
            this.fuzhuangid = res.result.id
            this.fuzhaungInfo[0].value = res.result.sg //身高
            this.fuzhaungInfo[1].value = res.result.tz //体重
            this.fuzhaungInfo[2].value = res.result.tw //头围
            this.fuzhaungInfo[3].value = res.result.yw //腰围
            this.fuzhaungInfo[4].value = res.result.xm //鞋码
            this.fuzhaungInfo[5].value = res.result.ffpz //发放品种
            this.fuzhaungInfo[6].value = res.result.ffcs //发放次数
            this.fuzhaungInfo[7].value = res.result.sfff //是否发放
          } else {
            this.$message.error(res.message)
          }
        })
        .finally(() => {
          this.confirmLoading = false
        })
    },
    close() {
      this.$emit('modalFormOk')
      this.visible = false
    },
    handleOk() {
      if (this.fuzhuangid == null || this.fuzhuangid == '') {
        this.add() //添加
      }else{
        this.bianji()
      }
    },
    //添加
    add() {
      let obj = {
        sfzh: this.sfzh,
        sg: this.fuzhaungInfo[0].value, //身高
        tz: this.fuzhaungInfo[1].value, //体重
        tw: this.fuzhaungInfo[2].value, //头围
        yw: this.fuzhaungInfo[3].value, //腰围
        xm: this.fuzhaungInfo[4].value, //鞋码
        ffpz: this.fuzhaungInfo[5].value, //发放品种
        ffcs: this.fuzhaungInfo[6].value, //发放次数
        sfff: this.fuzhaungInfo[7].value //是否发放
      }
      this.confirmLoading = true
      postAction('/rsda/fzxx/add', obj)
        .then(res => {
          if (res.success == true) {
            this.fuzhuangid = res.result.id
            this.$message.success(res.message)
          } else {
            this.$message.error(res.message)
          }
        })
        .finally(() => {
          this.confirmLoading = false
        })
    },
    //编辑
    bianji(){
      let obj = {
        id: this.fuzhuangid,
        sfzh: this.sfzh,
        sg: this.fuzhaungInfo[0].value, //身高
        tz: this.fuzhaungInfo[1].value, //体重
        tw: this.fuzhaungInfo[2].value, //头围
        yw: this.fuzhaungInfo[3].value, //腰围
        xm: this.fuzhaungInfo[4].value, //鞋码
        ffpz: this.fuzhaungInfo[5].value, //发放品种
        ffcs: this.fuzhaungInfo[6].value, //发放次数
        sfff: this.fuzhaungInfo[7].value //是否发放
      }
      this.confirmLoading = true
      putAction('/rsda/fzxx/edit', obj)
        .then(res => {
          if (res.success == true) {
            this.$message.success(res.message)
          } else {
            this.$message.error(res.message)
          }
        })
        .finally(() => {
          this.confirmLoading = false
        })
    },
    handleCancel() {
      this.close()
    }
  }
}
</script>

